<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:layout_width="160dp"
        android:layout_height="0dp"
        android:id="@+id/video_thumb_detail"
        android:scaleType="centerCrop"
       tools:background="@tools:sample/avatars"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="h,16:9"/>

    <TextView
        android:id="@+id/title_video_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Entrevista com estilizado"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:maxLines="2"
        app:layout_constraintEnd_toStartOf="@+id/video_actions"
        app:layout_constraintStart_toEndOf="@+id/video_thumb_detail"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/video_actions"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/mais"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_chanel_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:text="canal do brega"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/video_actions"
        app:layout_constraintStart_toStartOf="@+id/title_video_content"
        app:layout_constraintTop_toBottomOf="@+id/title_video_content" />

</androidx.constraintlayout.widget.ConstraintLayout>